<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- User_info部分テンプレート -->
      <div class="row">
        <%= render 'users/user_info', user: @user %>
      </div>
      <!-- New_book部分テンプレート -->
      <div class="row">
        <%= render 'books/newbook', book: @book %>
      </div>
    </div>
    <!-- 投稿したUserの一覧 -->
    <div class="col-md-9">
    <h2>Users</h2>
    <table class="table table-hover">
    <thead>
      <tr>s
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>
