<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <h2>Follow Users</h2>
    <table class="table table-hover">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
        <td><%= user.name %></td>
        <td></td>フォロー数カウント
        <td></td>フォロワー数カウント
        <% if current_user != user %>
          <% if user.followed_by?(current_user) %>
            <td><%= link_to "フォロー外す", user_relationships_path(user.id),method: :delete %></td>
          <% else %>
            <td><%= link_to "フォローする", user_relationships_path(user.id),method: :post %></td>
          <% end %>
        <% end %>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>
