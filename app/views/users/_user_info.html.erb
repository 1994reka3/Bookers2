  <h2>User info</h2>
  <table class="table">
    <thead>
      <%= form_for(user) do |f| %>
      <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <% end %>
    </thead>
  </table>
  <% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>