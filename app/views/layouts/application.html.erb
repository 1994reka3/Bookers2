<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <!-- ナビゲーションバー -->
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand">Bookers</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <a href="#"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              <%= link_to "Home", user_path(current_user.id) %>
            </a>
          </li>
          <li class="">
            <a href="#"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to "Users", users_path %>
            </a>
          </li>
          <li class="">
            <a href="#"><span class="glyphicon glyphicon-book" aria-hidden="true"></span><%= link_to "Books", books_path %>
            </a>
          </li>
          <li class="">
            <a href="#"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              <%= link_to "logout", destroy_user_session_path, method: :delete %></a>
          </li>
        <% else %>
          <li class="">
            <%= link_to "Home", root_path %>
          </li>
          <li class="">
            <%= link_to "About", homes_about_path %>
          </li>
          <li class="">
            <%= link_to "sign up", new_user_registration_path %>
          </li>
          <li class="">
            <a href="#"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><%= link_to "login", user_session_path %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
  </header>

  <main>
    <%= yield %>
  </main>

  <footer>
    <div class="footer">CopyRight Infratop.inc</div>
  </footer>

  </body>
</html>
