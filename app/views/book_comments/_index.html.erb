<% book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
      <p><%= book_comment.user.name %></p>
    </td>
    <td><%= book_comment.comment %>
    </td>
    <% if book_comment.user == current_user %>
      <td>
        <%= link_to "削除", book_book_comment_path(book,book_comment), method: :delete, remote: true, class: "btn btn-danger" %>
      </td>
    <% end %>
  </tr>
<% end %>
