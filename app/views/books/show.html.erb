<div class="container">
  <div class="row">
  <!-- エラーメッセージ -->
  <%= render 'books/error', newbook: @newbook %>
  <!-- flashメッセージ -->
  <% if flash[:notice] %>
    <p class="flash_message"><%= flash[:notice] %></p>
   <% end %>
    <div class="col-xs-3">
      <!-- User_info部分テンプレート -->
      <div class="row">
        <%= render 'users/user_info', user: @user %>
      </div>
      <!-- New_book部分テンプレート -->
      <div class="row">
        <%= render 'books/newbook', newbook: @newbook %>
      </div>
    </div>
    <!-- 本の詳細一覧 -->
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table-hover">
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
            <p><%= link_to @book.user.name, user_path(@user) %></p>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <!--いいね部分-->
          <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @book.favorites.count %>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="far fa-heart" aria-hidden="true"></i>
                <%= @book.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <!-- コメント件数 -->
          <td>コメント数: <%= @book.book_comments.count %></td>
          <!-- 編集・削除ボタン -->
          <% if user_signed_in? && current_user == @user %>
          <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
          <td><%= link_to "Destroy",book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </tbody>
      </table>
      <!-- コメント詳細 -->
      <table>
        <tbody>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
              <p><%= book_comment.user.name %></p>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <% if book_comment.user == current_user %>
            <td>
              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <!-- コメントフォーム -->
      <%= form_for [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows:'3', class: "form-control",placeholder: "コメントはこちら" %>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  </div>
</div>