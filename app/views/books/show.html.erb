<div class="container">
  <div class="row">
  <!-- エラーメッセージ -->
  <%= render 'books/error', newbook: @newbook %>
  <!-- flashメッセージ -->
  <% if flash[:notice] %>
    <p class="flash_message"><%= flash[:notice] %></p>
   <% end %>
    <div class="col-xs-3">
      <!-- User_info部分テンプレート -->
      <div class="row">
        <%= render 'users/user_info', user: @user %>
      </div>
      <!-- New_book部分テンプレート -->
      <div class="row">
        <%= render 'books/newbook', newbook: @newbook %>
      </div>
    </div>
    <!-- 本の詳細一覧 -->
    <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-hover">
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
          <p><%= link_to @book.user.name, user_path(@user) %></p>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if user_signed_in? && current_user == @user %>
        <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
        <td><%= link_to "Destroy",book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
      </tr>
    </tbody>
    </table>
    </div>
  </div>
</div>