<!-- 新規投稿 -->
<h2>New book</h2>
  <%= form_for(book) do |f| %>
  <div class="form-group">
    <label for="newbook_title">Title</label>
      <%= f.text_field :title, class:"form-control" %>
    <label for="newbook_opinion">Opinion</label>
      <%= f.text_area :body, class:"form-control", rows:"3" %>
  </div>
  <p><%= f.submit 'Create Book' %></p>
  <% end %>