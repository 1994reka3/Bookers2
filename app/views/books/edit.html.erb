<!-- エラーメッセージ -->
<%= render 'books/error', newbook: @book %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Editing Book</h2>
      <%= form_for(@book) do |f| %>
        <h4>Title</h4><%= f.text_field :title, size: "63" %>
        <h4>Opinion</h4><%= f.text_area :body, cols:"62", rows:"3"%>
        <%= f.submit 'Update Book', class: "btn btn-primary btn-block"%>
        <%= link_to "Show", book_path(@book) %>
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>